{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@keanu/daemon": ["./daemon/src/index.ts"],
      "@keanu/daemon/*": ["./daemon/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "detectors"]
}
